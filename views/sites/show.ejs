<!-- @format -->
<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= site.image %>" alt="...." class="card-img-top" />
      <div class="card-body">
        <h4 class="card-title"><%= site.title %></h4>
        <p class="card-text"><%= site.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">$<%= site.price %>/night</li>
        <li class="list-group-item text-muted"><%= site.location %></li>
        <li class="list-group-item">
          Submitted By :- <%= site.author.username %>
        </li>
      </ul>
      <% if(currentUser && site.author.equals(currentUser._id)) { %>
      <div class="card-body">
        <a
          href="/heritages/<%= site._id %>/edit"
          class="card-link btn btn-warning"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/heritages/<%= site._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-muted">
        2 days ago
        <a href="/heritages">All sites</a>
      </div>
    </div>
  </div>

  <!-- review form -->
  <div class="col-6">
    <% if(currentUser) { %>
    <h2>Leave a review</h2>
    <form
      action="/heritages/<%= site.id %>/reviews"
      method="POST"
      class="mb-3 needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Review</label>
        <textarea
          name="review[body]"
          id="body"
          cols="30"
          class="form-control"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %>

    <!-- get all reviews -->
    <% for(let review of site.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating : <%= review.rating %></h5>
        <h6 class="card-subtitle text-muted">
          By <%= review.author.username %>
        </h6>
        <p class="card-text">Review : <%= review.body %></p>
        <% if(currentUser && review.author.equals(currentUser._id)) { %>
        <form
          action="/heritages/<%= site._id %>/reviews/<%= review._id%>?_method=DELETE"
          method="POST"
        >
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
