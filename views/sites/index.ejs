<!-- @format -->

<% layout("layouts/boilerplate") %>
<h1>All heritage sites</h1>
<div>
  <a href="/heritages/new">Add site</a>
</div>
<% for (let site of sites) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(site.images.length) { %>
      <img src="<%= site.images[0].url %>" alt="" class="img-fluid" />
      <% } else {%>
      <img
        src="https://res.cloudinary.com/snazzycave/image/upload/v1617739121/Sanctum/d9i405rw6s0s83sfolwl.jpg"
        alt=""
        class="img-fluid"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title"><%= site.title %></h3>
        <p class="card-text"><%= site.description %></p>
        <p class="card-text">
          <span class="text-muted"><%= site.location %></span>
        </p>
        <a href="/heritages/<%= site._id %>" class="btn btn-primary"
          >View <%= site.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
