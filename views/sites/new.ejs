<!-- @format -->

<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">New Site</h1>
  <div class="col-6 offset-3">
    <form action="/heritages" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="heritage[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="heritage[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="heritage[image]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            id="price"
            class="form-control"
            aria-label="price"
            aria-describedby="price-label"
            name="heritage[price]"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="heritage[description]"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success" type="submit">Add site</button>
      </div>
    </form>
    <a href="/heritages">Back</a>
  </div>
</div>
